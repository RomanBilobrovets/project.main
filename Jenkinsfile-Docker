#!/usr/bin/env groovy

pipeline { 
    agent any
    stages {
        stage('Build and Push Image') {
            steps { 
                sh 'docker build -t roman/node-web-app'
                sh 'docker tag'
                sh 'docker push'
                sh 'cd docker'
                sh 'docker run -p 49160:8080 -d roman/node-web-app'
            }
                }
    }
    
}