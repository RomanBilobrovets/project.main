#!/usr/bin/env groovy

pipeline { 
    agent any
     environment {
         ANS_PATH = "/var/lib/jenkins/workspace/Docker/Jenkinsfile-Docker"
         ANS_KEY = credentials("ansible_key")
    }
    stages {
        stage('Build and Push Image') {
            steps { 
                sh ''
                sh 'docker --version'
                sh 'ls'
                sh 'pwd'
                sh 'cd docker'
                sh 'docker login -u AWS -p $(aws ecr get-login-password --region eu-central-1) xxxxxxxxx.dkr.ecr.eu-central-1.amazonaws.com'
            }
        }
     }
        
}