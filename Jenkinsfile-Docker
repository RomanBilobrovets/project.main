#!/usr/bin/env groovy

pipeline { 
    agent any
     environment {
         ANS_PATH = "/var/lib/jenkins/workspace/Docker/Jenkinsfile-Docker"
         ANS_KEY = credentials("ansible_key")
    }
    stages {
        stage('Build and Push Image') {
            steps { 
                sh 'docker --version'
                sh 'cd docker'
                sh 'sudo usermod -a -G docker jenkins'
                sh 'docker run -p 49160:8080 -d roman/node-web-app'
            }
        }
     }
        
}