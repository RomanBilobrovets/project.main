#!/usr/bin/env groovy

pipeline { 
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/your-username/your-nodejs-app.git'
            }
        }
        stage('Build and Push Image') {
             steps { 
                sh 'docker build -t roman'
                sh 'docker tag'
                sh 'docker push'
                sh 'cd docker'
                sh 'docker run -p 49160:8080 -d roman/node-web-app'
            }
        }
        }
}