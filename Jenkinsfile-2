#!/usr/bin/env groovy

pipeline{
  agent any  
  stages{
    
      stage("Git Checkout"){
        steps{
          sh 'git clone <https://github.com/RomanBilobrovets/project.main.git>'
        }
      }
      
      stage("Run an ansible playbook"){
        steps{
          sh 'ansible-playbook playbook3.yml --vault-password-file /home/ubuntu/.ssh/ansible_roles.pem '
        }
      }
   }
}